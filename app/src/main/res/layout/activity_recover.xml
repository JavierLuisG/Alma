<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.activities.RecoverActivity"
    android:background="@color/purple_buscador">

    <ImageView
        android:id="@+id/registerViewLogo"
        android:layout_width="330dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtRegisterPassword"
        android:src="@drawable/logonegroalma">
    </ImageView>

    <TextView
        android:id="@+id/txtRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/registerViewLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/registerFondo"
        android:gravity="center"
        android:fontFamily="@font/opensanslight"
        android:text="Restablecer contraseÃ±a"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black">

    </TextView>

    <ImageView
        android:id="@+id/registerFondo"
        android:layout_width="335dp"
        android:layout_height="240dp"
        android:background="@color/gris_borde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtRegisterPassword">
    </ImageView>

    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="240dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/registerFondo"
        app:layout_constraintStart_toStartOf="@id/registerFondo"
        app:layout_constraintEnd_toEndOf="@id/registerFondo"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/correo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="textEmailAddress">
    </EditText>

    <EditText
        android:id="@+id/registerConfirmEmail"
        android:layout_width="240dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/registerEmail"
        app:layout_constraintStart_toStartOf="@id/registerFondo"
        app:layout_constraintEnd_toEndOf="@id/registerFondo"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/confirmar_correo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="textEmailAddress">
    </EditText>

    <Button
        android:id="@+id/recoverButton"
        android:layout_width="270dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/registerConfirmEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/purple_dark"
        android:fontFamily="@font/opensanslight"
        android:text="@string/confirmar"
        android:textSize="22sp"
        android:textStyle="bold">
    </Button>




</androidx.constraintlayout.widget.ConstraintLayout>