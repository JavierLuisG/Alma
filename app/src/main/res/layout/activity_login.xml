<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.activities.LoginActivity"
    android:background="@color/purple_buscador">

    <ImageView
        android:id="@+id/loginViewLogo"
        android:layout_width="330dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginFondo"
        android:src="@drawable/logonegroalma">
    </ImageView>

    <ImageView
        android:id="@+id/loginFondo"
        android:layout_width="335dp"
        android:layout_height="365dp"
        app:layout_constraintTop_toBottomOf="@id/loginViewLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gris_borde">
    </ImageView>

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="240dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/loginFondo"
        app:layout_constraintStart_toStartOf="@id/loginFondo"
        app:layout_constraintEnd_toEndOf="@id/loginFondo"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/correo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="textEmailAddress">
    </EditText>

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="240dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/loginEmail"
        app:layout_constraintStart_toStartOf="@id/loginFondo"
        app:layout_constraintEnd_toEndOf="@id/loginFondo"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="@string/contrasenia"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="textPassword">
    </EditText>

    <Button
        android:id="@+id/loginButtonHome"
        android:layout_width="270dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/loginPassword"
        app:layout_constraintStart_toStartOf="@id/loginFondo"
        app:layout_constraintEnd_toEndOf="@id/loginFondo"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/purple_dark"
        android:fontFamily="@font/opensanslight"
        android:text="@string/iniciarSesion"
        android:textSize="22sp"
        android:textStyle="bold">
    </Button>

    <!-- app:layout_constraintHorizontal_bias..... permite correrlo de su posicion -->
    <TextView
        android:id="@+id/loginRecoverPassword"
        android:layout_width="233dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@id/loginButtonHome"
        app:layout_constraintStart_toStartOf="@id/loginFondo"
        app:layout_constraintEnd_toEndOf="@id/loginFondo"
        app:layout_constraintHorizontal_bias="0.7"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/opensanslight"
        android:text="@string/olvidasteContrasenia"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <Button
        android:id="@+id/loginButtonRegister"
        android:layout_width="270dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/loginRecoverPassword"
        app:layout_constraintStart_toStartOf="@id/loginFondo"
        app:layout_constraintEnd_toEndOf="@id/loginFondo"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_dark"
        android:fontFamily="@font/opensanslight"
        android:text="@string/registrarse"
        android:textSize="22sp"
        android:textStyle="bold">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>