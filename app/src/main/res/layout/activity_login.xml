<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.activities.LoginActivity"
    android:background="@color/purple_buscador">

    <ImageView
        android:id="@+id/loginViewLogo"
        android:layout_width="334dp"
        android:layout_height="226dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginFondo"
        android:src="@drawable/logonegroalma"
        >
    </ImageView>

    <ImageView
        android:id="@+id/loginFondo"
        android:layout_width="335dp"
        android:layout_height="363dp"
        app:layout_constraintTop_toBottomOf="@id/loginViewLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gris_borde">
    </ImageView>

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="240dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/loginFondo"
        app:layout_constraintStart_toStartOf="@id/loginFondo"
        app:layout_constraintEnd_toEndOf="@id/loginFondo"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="Correo"
        android:textSize="20dp"
        android:textStyle="bold">
    </EditText>

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="240dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/loginEmail"
        app:layout_constraintStart_toStartOf="@id/loginFondo"
        app:layout_constraintEnd_toEndOf="@id/loginFondo"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:fontFamily="@font/opensanslight"
        android:hint="Contraseña"
        android:textSize="20dp"
        android:textStyle="bold">
    </EditText>

    <Button
        android:id="@+id/loginButtonIniciarSesion"
        android:layout_width="270dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/loginPassword"
        app:layout_constraintStart_toStartOf="@id/loginFondo"
        app:layout_constraintEnd_toEndOf="@id/loginFondo"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/purple_dark"
        android:fontFamily="@font/opensanslight"
        android:text="iniciar sesión"
        android:textSize="22dp"
        android:textStyle="bold">
    </Button>

    <TextView
        android:id="@+id/loginRecoverPassword"
        android:layout_width="233dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@id/loginButtonIniciarSesion"
        app:layout_constraintStart_toStartOf="@id/loginFondo"
        app:layout_constraintEnd_toEndOf="@id/loginFondo"
        app:layout_constraintHorizontal_bias="0.7"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/opensanslight"
        android:text="Olvidaste tu contraseña?"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold">
    </TextView>

    <Button
        android:id="@+id/loginButtonRegister"
        android:layout_width="270dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/loginRecoverPassword"
        app:layout_constraintStart_toStartOf="@id/loginFondo"
        app:layout_constraintEnd_toEndOf="@id/loginFondo"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_dark"
        android:fontFamily="@font/opensanslight"
        android:text="registrarse"
        android:textSize="22dp"
        android:textStyle="bold">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>